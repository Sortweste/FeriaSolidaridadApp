<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="article"
            type="com.sort.feriaapp.network.responses.ArticleResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/representative_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:setImageUrl="@{article.image_url}"
            android:contentDescription="@string/representative_image_institution" />

        <TextView
            android:id="@+id/institution_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{article.institution}"
            android:textSize="@dimen/Title_cardview"/>

        <TextView
            android:id="@+id/TVinstitution_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="institution"
            android:textSize="@dimen/institution_cardview"/>

        <TextView
            android:id="@+id/TVdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="@dimen/description_cardview"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>

