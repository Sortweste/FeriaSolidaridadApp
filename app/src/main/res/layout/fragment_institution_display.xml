<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.sort.feriaapp.viewmodels.InstitutionDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="200dp">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        app:contentScrim="?attr/colorPrimary"
                        app:expandedTitleMarginEnd="64dp"
                        app:expandedTitleMarginStart="48dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        >

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:layout_scrollFlags="scroll|enterAlways" />

                        <ImageView
                            android:id="@+id/representative_carousel"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="@string/representative_image_institution"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:setImageUrl="@{viewmodel.institutionInfo.institution.imageURL}"
                            tools:src="@drawable/slider" />

                    </com.google.android.material.appbar.CollapsingToolbarLayout>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


            <TextView
                android:id="@+id/institute_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:text="@{viewmodel.institutionInfo.institution.name}"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/topAppBar"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Institute Name Placeholder" />

            <TextView
                android:id="@+id/institute_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="@{viewmodel.institutionInfo.institution.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topAppBar"
                tools:text="@string/lorem_ipsum" />

            <FrameLayout
                android:id="@+id/youtube_fragment"
                goneUnless="@{viewmodel.institutionInfo.institution.videoURL.empty}"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/institute_description" />

            <TextView
                android:id="@+id/meetup_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableStart="@drawable/ic_action_video"
                android:drawableLeft="@drawable/ic_action_video"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:text="@{viewmodel.institutionInfo.institution.meetup}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:goneUnless="@{viewmodel.institutionInfo.institution.meetup.empty}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/youtube_fragment"
                tools:text="Link to our meetings" />


            <TextView
                android:id="@+id/facebook_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableStart="@drawable/ic_action_video"
                android:drawableLeft="@drawable/ic_action_video"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/facebook"
                app:goneUnless="@{viewmodel.institutionInfo.institution.facebook.empty}"
                app:facebookMessage="@{viewmodel.institutionInfo.institution.facebook}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meetup_view"
                tools:textColor="@color/facebook"
                tools:text="Facebook Account" />

            <TextView
                android:id="@+id/twitter_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableStart="@drawable/ic_action_video"
                android:drawableLeft="@drawable/ic_action_video"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:text="@{viewmodel.institutionInfo.institution.twitter}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:goneUnless="@{viewmodel.institutionInfo.institution.twitter.empty}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/facebook_view"
                android:textColor="@color/twitter"
                tools:textColor="@color/twitter"
                tools:text="Twitter Account" />

            <TextView
                android:id="@+id/instagram_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableStart="@drawable/ic_action_video"
                android:drawableLeft="@drawable/ic_action_video"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:text="@{viewmodel.institutionInfo.institution.instagram}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:goneUnless="@{viewmodel.institutionInfo.institution.instagram.empty}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/twitter_view"
                tools:text="Instagram Account" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
